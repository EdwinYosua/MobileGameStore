<resources>
    <!-- Base application theme. -->
    <style name="Theme.MobileGameStore" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/erie_black</item>
        <item name="colorPrimaryDark">@color/charleston_green</item>
        <item name="colorAccent">@color/teal_200</item>
        <item name="colorError">@color/purple_200</item>

        <item name="android:colorBackground">@color/erie_black</item>
        <item name="android:statusBarColor">@color/black</item>
        <item name="android:navigationBarColor">@color/black</item>

    </style>

    <style name="Theme.MobileGameStore.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.MobileGameStore.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar" />

    <style name="Theme.MobileGameStore.PopupOverlay" parent="ThemeOverlay.MaterialComponents.Light" />
</resources>